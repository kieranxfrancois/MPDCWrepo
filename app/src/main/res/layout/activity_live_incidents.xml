<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundPic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bootleg_comic_sans"
        android:layout_marginTop="10sp"
        android:text="Live Incidents"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:shadowColor="@color/white"
        android:shadowDx="1.5"
        android:shadowDy="1.8"
        android:shadowRadius="8"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="15dp"
        android:text="See all current incidents below, provided by"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/navy"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/instruction1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instruction"
        android:layout_marginTop="1dp"
        android:text="Traffic Scotland"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/navy"
        android:textSize="16sp" />

    <ExpandableListView
        android:id="@+id/ExpandableList"
        android:layout_width="385dp"
        android:layout_height="563dp"
        android:layout_below="@+id/instruction1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp" />

</RelativeLayout>
